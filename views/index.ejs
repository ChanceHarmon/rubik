<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Rubik</title>
  <link rel="stylesheet" href="styles/reset.css">
  <link rel="stylesheet" href="styles/style.css">
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
</head>

<body>
  <div id="mainCube">


    <% cube.forEach( face=> { %>
      <div id="gridFace_<%= face[0].face_id %>" class="face_layout">
        <% face.forEach( grid=> { %>
          <% let position=grid.positions.split(','); %>
            <div class="<%= grid.row %>_left <%= position[0].split(':')[0] %> item_layout">
              <p class="box-text">
                <%= position[0] %>
              </p>
            </div>
            <div class="<%= grid.row %>_center <%= position[1].split(':')[0] %> item_layout">
              <p class="box-text">
                <%= position[1] %>
              </p>
            </div>
            <div class="<%= grid.row %>_right <%= position[2].split(':')[0] %> item_layout">
              <p class="box-text">
                <%= position[2] %>
              </p>
            </div>

            <% }) %>
      </div>
      <% }) %>

        <div id="holyCubeReset">
          <form action="/reset" method="GET">
            <h2>Reset the Cube to Solved</h2>
            <input type="submit">
          </form>
        </div>
        <div id="toggle-text">
          <h2>Hide or Show Cube Labels</h2>
          <button id="hide-show-button">Hide/Show</button>
        </div>

        <div id="movement">
          <form action="/user_action" method="POST">
            <h2>Select your next move!</h2>
            <label for="cube_face_selector">Select which Cube Face you want to Rotate. A cube's Face will always be the
              center color of each face.</label>
            <div id="cube_face_selector">
              <input type="radio" id="orange" name="cube_side" value="orange">
              <label for="orange">Orange</label>
              <input type="radio" id="green" name="cube_side" value="green">
              <label for="green">Green</label>
              <input type="radio" id="white" name="cube_side" value="white">
              <label for="white">White</label>
              <input type="radio" id="blue" name="cube_side" value="blue">
              <label for="blue">Blue</label>
              <input type="radio" id="red" name="cube_side" value="red">
              <label for="red">Red</label>
              <input type="radio" id="yellow" name="cube_side" value="yellow">
              <label for="yellow">Yellow</label>
            </div>

            <div id="movement_options">
              <h3>Select Direction to Rotate</h3>
              <input type="radio" id="rotate_face_clock" name="rotate_roll" value="rotate_face_clockwise">
              <label for="rotate_face_clock">Clockwise</label>
              <input type="radio" id="rotate_face_counter" name="rotate_roll" value="rotate_face_counter_clockwise">
              <label for="rotate__face_counter">Counter Clockwise</label>
            </div>
            <input type="submit">
          </form>
        </div>

  </div>


  <script src="js/app.js"></script>
</body>

</html>